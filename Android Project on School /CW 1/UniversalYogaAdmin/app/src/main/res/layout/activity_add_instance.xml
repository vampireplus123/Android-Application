<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="16dp"
    android:orientation="vertical"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <EditText android:id="@+id/edtDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Date (e.g. 17/10/2023)"/>

    <EditText android:id="@+id/edtTeacher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Teacher name"/>

    <EditText android:id="@+id/edtComment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Comment (optional)"/>

    <Button android:id="@+id/btnAddInstance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Instance"/>
</LinearLayout>
